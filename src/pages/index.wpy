<template>
	<view class="container">
		<image class="banner" src="../images/banner.jpg"></image>
		<view class="banner-txt">
			<view class="txt1">真房源·找房牛</view>
			<view class="txt2">找房真平台，省钱省时间</view>
		</view>
		<view class="address" @tap="address">
			<image src="../images/white-address.png"></image>
			<text>厦门</text>
		</view>
		<view class="search-bar" @tap="toSearch">
			<image src="../images/search.png"></image>
			<text>搜索小区或地址</text>
		</view>
		<view class="header">
			<view class="header-left">
				<view class="title">厦门市场行情</view>
				<view class="price"><text class="number">{{market.price}}</text><text class="unit">元/平米</text></view>
				<view class="ratio">
					<text class="word">环比上个月</text>
					<image src="{{market.isDecline?'../images/decline.png':'../images/rise.png'}}"></image>
					<text class="{{market.isDecline? 'green': 'red'}}"> {{market.ratio}}</text>
				</view>
			</view>
			<view class="header-center"></view>
			<view class="header-right">
				<navigator appId="wx0653ba0a3274d3b9" hover-class="active" openType="navigate" path="pages/index" target="miniProgram" version="release">
					<view class="calc"><image src="../images/calc.png"></image></view>
					<text>房屋估价</text>
				</navigator>
			</view>
		</view>
		<sortBar :scrollTop.sync="scrollTop"></sortBar>
		<houseList :dataList.sync="dataList"></houseList>
		<footer></footer>
		<!-- 授权弹窗 -->
		<authorModal :showAuthorModal.sync="showAuthorModal"></authorModal>
	</view>
</template>

<script>
import wepy from 'wepy'
import api from '../utils/api'
import {getUserInfo, getUserId} from '../utils/util'
import footer from '../components/footer'
import houseList from '../components/list_house'
import sortBar from '../components/bar_sort'
import authorModal from '../components/modal_author'
export default class Index extends wepy.page {
	config = {
		navigationBarTitleText: '房牛找房'
	}
	components = {
		footer,
		houseList,
		sortBar,
		authorModal
	}

	data = {
		dataList: '',
		market: {},
		showAuthorModal: false,
		scrollTop: 0,
		page: 1
	}

	computed = {
	}

	events = {
		finishAuthor () {
			wx.showTabBar()
		}
	}
	// 监听页面滚动
	onPageScroll (e) {
		this.scrollTop = e.scrollTop
		this.$apply()
	}
	// 上拉触底事件
	async onReachBottom() {
		console.log('bottom')
		await this.getHouseList(this.page + 1)
	}
	async onLoad() {
		await this.getHouseList(this.page)
		await getUserId()
		const uid = wx.getStorageSync('uid')
		if (!uid) {
			this.showAuthorModal = true
			wx.hideTabBar()
		} else {
			await getUserInfo()
		}
		// await getSign()
		this.$apply()
	}

	getHouseList(page) {
		return new Promise(async resolve => {
			if (page != 1) {
				wx.showLoading({
					title: '玩命加载中',
				})
			}
			const {data} = await wepy.request({
				url: api['houseList'],
				data: {
					page: page,
					pagesize: 8
				}
			})
			console.log('data', data)
			this.dataList = [this.dataList, ...data.list]
			if (!this.dataList[0]) this.dataList = this.dataList.slice(1)
			wx.hideLoading()
			if (page == 1) {
				// 第一次获取时，之后翻页都无需重新赋值
				this.market.price = data.total_price
				if (data.ratio.indexOf('-') != -1) {
					this.market.ratio = data.ratio.slice(1)
					this.market.isDecline = true
				} else {
					this.market.ratio = data.ratio
					this.market.isDecline = false
				}
			}
			this.$apply()
			resolve()
		})
	}
	methods = {
		address() {
			wepy.showToast({
				title: '当前只支持厦门地区',
				icon: 'none'
			})
		},
		toSearch () {
			wepy.navigateTo({url: 'index_search'})
		},
		toGujia () {
			wx.navigateToMiniProgram({
				appId: 'wx0653ba0a3274d3b9',
				path: 'pages/index',
				success(res) {
					// 打开成功
				}
			})
		}
	}
}
</script>
