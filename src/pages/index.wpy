<template>
	<view class="container">
		<image class="banner" src="http://qimg.fangzi.xiaoyu.com/fangniu/banner.jpg"></image>
		<view class="banner-txt">
			<view class="txt1">真房源·找房牛</view>
			<view class="txt2">找房真平台，省钱省时间</view>
		</view>
		<view class="address" @tap="address">
			<image src="../images/white-address.png"></image>
			<text>厦门</text>
		</view>
		<view class="search-bar" @tap="toSearch">
			<image src="../images/search.png"></image>
			<text>搜索小区</text>
		</view>
		<view class="header">
			<view class="header-left">
				<view class="title">厦门市场行情</view>
				<view class="content">
					<view class="price"><text class="number">{{market.price}}</text><text class="unit">元/m²</text></view>
					<view class="ratio">
						<text class="word">比上月：</text>
						<image src="{{market.isDecline?'../images/decline.png':'../images/rise.png'}}"></image>
						<text class="{{market.isDecline? 'green': 'red'}}"> {{market.ratio}}%</text>
					</view>
				</view>
			</view>
			<view class="header-center"></view>
			<view class="header-right">
				<navigator appId="wx0653ba0a3274d3b9" hover-class="active" openType="navigate" path="pages/index" target="miniProgram" version="release">
					<image src="../images/calc.jpg"></image>
					<view>房屋估价</view>
				</navigator>
			</view>
		</view>
		<sortBar :scrollTop.sync="scrollTop"></sortBar>
		<houseList :dataList.sync="dataList" from="index"></houseList>
		<view class="loading" wx:if="{{isLoading && dataList.length}}">
			<image src="../images/loading.png"></image>
			<view>玩命加载中</view>
		</view>
		<footer></footer>
		<!-- 授权弹窗 -->
		<authorModal :showAuthorModal.sync="showAuthorModal"></authorModal>
		<!-- 退出专属主页 -->
		<view class="quitVIP" wx:if="{{agentId}}" @tap="quitVIP">退出</view>
	</view>
</template>

<script>
import wepy from 'wepy'
import api from '../utils/api'
import {getUserInfo, getUserId, getSign} from '../utils/util'
import footer from '../components/footer'
import houseList from '../components/list_house'
import sortBar from '../components/bar_sort'
import authorModal from '../components/modal_author'
export default class Index extends wepy.page {
	config = {
		navigationBarTitleText: '房牛找房',
		onReachBottomDistance: 150
	}
	components = {
		footer,
		houseList,
		sortBar,
		authorModal
	}

	data = {
		dataList: [],
		sortObj: {},
		market: {},
		showAuthorModal: false,
		scrollTop: 0,
		page: 1,
		isLoading: false,  // 列表页加载中
		houseId: '', // 从房源详情页分享进来Id
		estateId: '', // 从小区详情页分享进来Id
		agentId: '', // 经纪人专属主页的经纪人Id
		isShareFrom: false
	}

	computed = {
	}

	events = {
		finishAuthor () {
			wx.showTabBar()
			if (this.houseId) {
				// 房源详情页分享进来的
				wepy.navigateTo({url: `detail?id=${this.houseId}`})
			} else if (this.estateId) {
				// 小区详情页分享进来的
				wepy.navigateTo({url: `detail_estate?id=${this.estateId}`})
			}
		},
		sortHouses (sortObj) {
			this.page = 1
			this.sortObj = sortObj
			this.dataList = []
			this.getHouseList()
		}
	}
	// 监听页面滚动
	onPageScroll ({scrollTop}) {
		this.scrollTop = scrollTop
		this.$apply()
	}
	// 上拉触底事件
	async onReachBottom() {
		if (!this.indexVIP) {
			console.log('上拉触底事件')
			await this.getHouseList(++this.page)
		}
	}
	onShareAppMessage(ops) {
		console.log('ops', ops)
		let path = 'pages/index'
		if (this.agentId) {
			// 经纪人专属主页
			path = `pages/index?agentId=${this.agentId}`
		}
		return {
			title: '真房源找房牛，省钱省时间',
			path: path, // 点击分享消息是打开的页面
			success: (res) => {
			// 转发成功
			console.log('转发成功:' + JSON.stringify(res))
			//   var shareTickets = res.shareTickets
			},
			fail: (err) => {
			// 转发失败
			console.log('转发失败:' + JSON.stringify(err))
			}
		}
	}
	async onShow () {
		// 分享进来的，不继续执行
		if (this.isShareFrom) return
		this.agentId = wx.getStorageSync('agentId')
		if (this.agentId) {
			// 经纪人的专属主页
			this.sortObj = {}
			this.dataList = []
			this.$invoke('sortBar', 'clearResult')
			await this.getHouseList(this.agentId)
			this.$apply()
			return
		}
	}
	async onLoad(option) {
		this.getMarket()
		this.getHouseList()
		// 从分享进来的
		if (JSON.stringify(option) != '{}') {
			this.houseId = option.houseId
			this.estateId = option.estateId
			this.agentId = option.agentId
			this.isShareFrom = true
			const uid = await getUserId()
			if (!uid) {
				wx.hideTabBar()
				this.showAuthorModal = true
			} else {
				if (option.houseId) {
					// 房源详情页分享进来的
					wepy.navigateTo({url: `detail?id=${option.houseId}`})
				} else if (option.estateId) {
					// 小区详情页分享进来的
					wepy.navigateTo({url: `detail_estate?id=${option.estateId}`})
				} else if (option.agentId) {
					// 经纪人主页分享进来的
					console.log('经纪人主页分享进来的')
					this.dataList = []
					this.getHouseList(this.agentId)
				}
				await getUserInfo()
			}
		} else {
			// 正常进来
			const uid = await getUserId()
			if (!uid) {
				wx.hideTabBar()
				this.showAuthorModal = true
			} else {
				wx.showTabBar()
				await getUserInfo()
			}
			wx.showTabBarRedDot({index: 1})
			wx.showShareMenu()
			await getSign()
		}
		this.$apply()
	}

	getMarket() {
		return new Promise(async resolve => {
			const {data} = await wepy.request({
				url: api['getMarket'],
			})
			this.market.price = data.total_price
			if (data.ratio.indexOf('-') != -1) {
				this.market.ratio = data.ratio.slice(1)
				this.market.isDecline = true
			} else {
				this.market.ratio = data.ratio
				this.market.isDecline = false
			}
			resolve()
			this.$apply()
		})
	}

	getHouseList() {
		return new Promise(async resolve => {
			let form = {
				page: this.page,
				pagesize: 8,
			}
			if (this.agentId) {
				form.agentId = this.agentId
			}
			if (this.page == 1) form.pagesize = 4
			Object.assign(form, this.sortObj)
			this.isLoading = true
			const {data: {list}} = await wepy.request({
				url: api['houseList'],
				data: form
			})
			if (list) {
				this.dataList = [...this.dataList, ...list]
			}
			this.isLoading = false
			this.$apply()
			resolve()
		})
	}
	methods = {
		address() {
			wepy.showToast({
				title: '当前只支持厦门地区',
				icon: 'none'
			})
		},
		toSearch () {
			wepy.navigateTo({url: 'index_search'})
		},
		toGujia () {
			wx.navigateToMiniProgram({
				appId: 'wx0653ba0a3274d3b9',
				path: 'pages/index',
				success(res) {
					// 打开成功
				}
			})
		},
		quitVIP() {
			this.agentId = ''
			wx.setStorageSync('agentId', '')
			this.myInitIM()
		}
	}
}
</script>
