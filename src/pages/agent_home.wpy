		<view class="cells">
			<view class="cell {{item.isTouchMove ? 'touch-move-active' : ''}}" wx:for="{{list}}" wx:key="index">
				<view class="content" bindtouchstart="touchS" bindtouchmove="touchM" data-index="{{index}}">
					<view class="title">
