<style lang="less">
@import '../styles/base.less';
.canvas {
	width:100%;
	.poster {
		width: 375px;
		height: 600px;
	}
	.canvasImg {
		position: fixed;
		display: flex;
		flex-direction: column;
		width: 550rpx;
		height: 880rpx;
		top: 80rpx;
		left: 110rpx;
		z-index: 2000;
	}
	.shade {
		width: 100%;
		height: 100%;
		position: fixed;
		top: 0;
		left: 0;
		background: #000;
		opacity: 0.2;
		overflow: hidden;
		z-index: 100;
		color: #fff;
	}
	.bar {
		.flex;
		justify-content: space-around;
		position: fixed;
		background: #fff;
		bottom: 0rpx;
		width: 100%;
		height: 180rpx;
		z-index: 2000;
		.item {
			.flex;
			flex-direction: column;
			justify-content: space-around;
			width: 200rpx;
			height: 150rpx;
			image {
				width: 70rpx;
				height: 70rpx;
			}
		}
		&-btn {
			position: absolute;
			width: 200rpx;
			height: 150rpx;
			top: 20rpx;
			opacity: 0;
		}
	}
}
</style>
<template>
<view class="canvas">
	<block wx:if="{{showCanvas}}">
		<canvas class="poster" canvas-id="poster"></canvas>
	</block>
	<block>
		<view class="shade" @tap="closePoster"></view>
		<image src="{{tempFilePath}}" class="canvasImg"></image>
		<view class="bar">
			<view class="item">
				<image src="http://qimg.fangzi.xiaoyu.com/fangniu/wxchat.png"></image>
				<button class='bar-btn' open-type="share"></button>
				<text>发送给好友</text>
			</view>
			<view class="item" @tap="saveToAblum">
				<image src="http://qimg.fangzi.xiaoyu.com/fangniu/download.png"></image>
				<text>保存卡片</text>
			</view>
		</view>
	</block>
</view>
</template>

<script>
import wepy from 'wepy'
export default class Poster extends wepy.component {
	props = {
		house: Object,
		systemInfo: Object
	}
	data = {
		tempFilePath: '',
		tempImgs: [],
		tempBg: '',
		showCanvas: true,
		isCreated: false
	}
	onLoad() {
		wx.getImageInfo({
			src: 'https://api.hd.xiaoyu.com/img/wechatapp/poster.png',
			success: (res) => {
				this.tempBg = res.path
				this.$apply()
			}
		})
	}
	async getPoster () {
		if (this.isCreated) {
			wx.hideLoading()
			return
		}
		await this.getImagesInfo()
		await this.initCanvas()
		wx.hideLoading()
		this.isCreated = true
		this.$apply()
	}
	async getImagesInfo () {
		return new Promise(async resolve => {
			const p1 = this.getImageInfo(this.house.posterImgs[0], 0)
			const p2 = this.getImageInfo(this.house.posterImgs[1], 1)
			const p3 = this.getImageInfo(this.house.posterImgs[2], 2)
			if (this.house.posterImgs.length < 6) {
				// 取房源第一张
				Promise.all([p1, p2, p3]).then((res) => {
					resolve()
				})
				return
			}
			const p4 = this.getImageInfo(this.house.posterImgs[3], 3)
			const p5 = this.getImageInfo(this.house.posterImgs[4], 4)
			const p6 = this.getImageInfo(this.house.posterImgs[5], 5)
			Promise.all([p1, p2, p3, p4, p5, p6]).then((res) => {
				resolve()
			})
		})
	}
	getImageInfo(src, index) {
		// 转化网络图片，获取路径
		return new Promise(resolve => {
			wx.getImageInfo({
				src: src,
				success: (res) => {
					this.tempImgs[index] = res.path
					this.$apply()
					resolve('ok')
				}
			})
		})
	}
	initCanvas() {
		return new Promise(resolve => {
			const ctx = wx.createCanvasContext('poster')
			ctx.drawImage(this.tempBg, 0, 0, 375, 600)   // 画海报
			ctx.drawImage(this.tempImgs[0], 131.5, 548.5, 35.5, 35.5) // 画经纪人头像
			ctx.drawImage(this.tempImgs[1], 155, 400, 65, 65) // 小程序二维码
			if (this.tempImgs.length == 3) {
				ctx.drawImage(this.tempImgs[2], 40, 100, 294, 190) // 画房源图片1
			} else {
				ctx.drawImage(this.tempImgs[2], 40, 100, 142, 90) // 画房源图片1
				ctx.drawImage(this.tempImgs[3], 193, 100, 142, 90) // 画房源图片2
				ctx.drawImage(this.tempImgs[4], 40, 200, 142, 90) // 画房源图片3
				ctx.drawImage(this.tempImgs[5], 193, 200, 142, 90) // 画房源图片4
			}
			ctx.drawImage('../images/approve.png', 285, 280, 70, 60) // 画房源认证
			ctx.setFontSize(14)
			ctx.setTextAlign('center')
			if (this.house.title.length < 20) {
				ctx.fillText(this.house.title, 187, 320)
			} else {
				ctx.fillText(this.house.title.slice(0, 20), 187, 310)
				ctx.fillText(this.house.title.slice(20, 40), 187, 330)
			}
			ctx.save()
			// 绘制详情标题
			ctx.setFontSize(12)
			ctx.setFillStyle('#646371')
			ctx.fillText('售价', 84, 362)
			ctx.fillText('房型', 186, 362)
			ctx.fillText('建筑面积', 280, 362)
			ctx.restore()
			ctx.save()
			// 绘制详情内容
			ctx.setFontSize(12)
			ctx.setFillStyle('#ce864c')
			ctx.fillText(`${this.house.sellPrice}万`, 84, 382)
			ctx.fillText(`${this.house.countF}室${this.house.countT}厅${this.house.countW}卫`, 186, 382)
			ctx.fillText(`${this.house.square}m²`, 280, 382)
			ctx.restore()
			// 绘制经纪人信息
			ctx.save()
			ctx.setTextAlign('left')
			ctx.setFillStyle('#fff')
			ctx.setFontSize(13)
			ctx.fillText(`${this.house.employeeName1}`, 174, 566)
			ctx.restore()
			ctx.save()
			ctx.setFillStyle('#fff')
			ctx.setTextAlign('left')
			ctx.setFontSize(10)
			ctx.fillText(`${this.house.deptName1}`, 174, 580)
			ctx.restore()
			// 在draw回调里才不会绘制空白
			ctx.draw(false, async (res) => {
				await this.saveCanvas()
				this.showCanvas = false
			})
			resolve()
		})
	}
	saveCanvas () {
		return new Promise(resolve => {
			wx.canvasToTempFilePath({
				canvasId: 'poster',
				quality: 1,
				success: (res) => {
					this.tempFilePath = res.tempFilePath
					this.$apply()
					resolve()
				}
			})
		})
	}

	methods = {
		saveToAblum () {
			wx.saveImageToPhotosAlbum({
				filePath: this.tempFilePath,
				success: (res) => {
					wx.showToast({
						title: '保存成功'
					})
					this.$emit('closePoster')
				},
				fail: (err) => {
					if (err.errMsg == 'saveImageToPhotosAlbum:fail cancel') {
						wx.showToast({
							title: '您已取消保存',
							icon: 'none'
						})
					} else if (err.errMsg == 'saveImageToPhotosAlbum:fail auth deny') {
						wx.showModal({
							title: '提示',
							content: '保存图片失败，您可以点击确定设置获取相册权限后再尝试保存！',
							complete: (res) => {
								if (res.confirm) {
									wx.openSetting({}) // 打开小程序设置页面，可以设置权限
								}
							}
						})
					}
				}
			})
		},
		closePoster () {
			this.$emit('closePoster')
		}
	}
}
</script>
