<template>
<view class="house-deatil">
	<swiper
		class="banner"
		indicator-dots="{{indicatorDots}}"
		autoplay="{{autoplay}}"
		interval="{{interval}}"
		duration="{{duration}}"
	>
	<block wx:for="{{imgUrls}}" wx:key="index">
		<swiper-item>
			<image src="{{item}}" class="slide-image" @tap="previewImg"/>
		</swiper-item>
	</block>
	</swiper>
	<view class="panel-house">
		<view class="cell1">
			<view class="cell1-text">{{house.title}}</view>
			<view class="cell1-mark" @tap="setMark">
				<image src="{{isMarked ? '../images/mark.png': '../images/un-mark.png'}}"></image>
