</view>
</template>
<script>
import wepy from 'wepy'
export default class panelHouseDetail extends wepy.component {
	props = {
		house: Object
	}

	data = {
		imgUrls: [
			'https://image.qfstatic.com/haixifangchan_company8fee8cd09/2017/201709/20170914/csm/d1/a114/e5025/p24713/9bcf0edc710e459ab287a59168708cc4.jpg',
			'https://image.qfstatic.com/haixifangchan_company8fee8cd09/2017/201709/20170914/csm/d1/a114/e5025/p24713/9bcf0edc710e459ab287a59168708cc4.jpg',
			'https://image.qfstatic.com/haixifangchan_company8fee8cd09/2017/201709/20170914/csm/d1/a114/e5025/p24713/9bcf0edc710e459ab287a59168708cc4.jpg',
		],
		indicatorDots: false,
		autoplay: false,
		interval: 5000,
		duration: 1000,
		isMarked: false,
		markText: '关注'
	}

	watch = {
		isMarked () {
			this.markText = this.isMarked == true ? '已关注' : '关注'
			this.$apply()
		}
	}

	methods = {
		detailIntroduce () {
			wepy.navigateTo({url: 'detail_introduce'})
		},
		setMark () {
			this.isMarked = !this.isMarked
		},
		previewImg() {
			wx.previewImage({
				current: '', // 当前显示图片的http链接
				urls: this.imgUrls // 需要预览的图片http链接列表
			})
		}
	}
}
</script>
