<script>
import wepy from 'wepy'
import api from '../utils/api'
export default class Footer extends wepy.component {
	props = {
		userInfo: Object,
	}

	data = {
	}

	watch = {
	}

	onLoad() {
	}

	methods = {
		toHome() {
			wepy.navigateTo({url: 'agent_home'})
		},
		async submit({detail}) {
			console.log('detail', detail)
			await wepy.request({
				url: api['saveFromId'],
				method: 'POST',
				data: {
					uid: wepy.$instance.globalData.myUserInfo.uid,
					form_id: detail.formId
				}
			})
		},
		async sign() {
			wepy.showToast({title: '签到成功'})
			await wepy.request({
				url: api['signIn'],
				method: 'POST',
				data: {
					uid: wepy.$instance.globalData.myUserInfo.uid,
				}
			})
		}
	}
}
