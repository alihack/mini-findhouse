<script>
import wepy from 'wepy'
import webim from './utils/webim_wx'
import 'wepy-async-function'

export default class extends wepy.app {
	config = {
		pages: [
			'pages/index',
			'pages/detail_support',
			'pages/detail',
			'pages/index_search',
			'pages/agent_addSource',
			'pages/chat',
			'pages/my',
			'pages/message',
			'pages/detail_sameEstate',
			'pages/detail_estate',
			'pages/user_mark',
			'pages/user_history',
		],
		tabBar: {
			'selectedColor': '#2d8cf0',
			'color': '#666666',
			'list': [{
				'pagePath': 'pages/index',
				'text': '首页',
				'iconPath':	'./images/home-gray.png',
				'selectedIconPath': './images/home-blue.png',
			},
			{
				'pagePath': 'pages/message',
				'text': '消息',
				'iconPath':	'./images/chat-gray.png',
				'selectedIconPath': './images/chat-blue.png',
			},
			{
				'pagePath': 'pages/my',
				'text': '我的',
				'iconPath':	'./images/my-gray.png',
				'selectedIconPath': './images/my-blue.png',
			}]
		},
		window: {
			backgroundTextStyle: 'light',
			enablePullDownRefresh: false,
			navigationBarBackgroundColor: '#fff',
			navigationBarTitleText: 'WeChat',
			navigationBarTextStyle: 'black'
		},
		navigateToMiniProgramAppIdList: ['wx0653ba0a3274d3b9']
	}

	globalData = {
		myUserInfo: null
	}
	async onLaunch() {
		// 到每月一号自动清一次缓存
		const date = new Date()
		if (date.getDate() == 1) {
			console.log('到1号自动清缓存')
			wx.clearStorageSync()
		}
		wx.setStorageSync('toQuitIM', true)
	}

	onHide() {
		// 从前台进入后台
		console.log('从前台切入后台')
		const quitIM = wx.getStorageSync('toQuitIM')
		console.log('quitIm', quitIM)
		if (quitIM) {
			// 普通页面的退出
			webim.logout(res => {
				console.log('退出', res)
			})
		} else {
			// 预览照片的退出
		}
	}

	constructor() {
		super()
		this.use('requestfix')
		this.use('promisify')
		this.intercept('request', {
			config (req) { // 这里不能用异步函数
				req.header = {'content-type': 'application/x-www-form-urlencoded'}
				console.log('请求开始', req.data)
				return req
			},
			success (res) {
				console.log('请求完成', res.data)
				return res.data
			}
		})

		// 省得每次跳转都要打'/pages/'
		function config (req) { req.url = '/pages/' + req.url; return req }
		this.intercept('navigateTo', {config})
		this.intercept('redirectTo', {config})
		this.intercept('switchTab', {config})
	}
}
</script>
